<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/toastr")

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UCO Homework Tool", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @RenderSection("ContextLinks",required: false)
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    @RenderSection("Sidebar", required: false)
                </ul>
            </div>
            <div class="col-sm-9 col-md-10 col-sm-offset-3 col-md-offset-2 main">
                <div id="pageContent">

                    @RenderBody()
                </div>
            </div>
        </div>

    </div>

</body>
</html>
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle=offcanvas]').click(function () {
            $('.row-offcanvas').toggleClass('active');
        });
    });
</script>
<script>
    $(document).ready(function () {
        $("ul.nav-sidebar a").click(function (e) {
            e.preventDefault(); // prevent default link button redirect behaviour
            var aId = $(this).data("assignment");
            var self = $(this).parent();
            $.ajax({
                async: true,
                url: '@Url.Action("Assignment")',
                type: 'GET',
                cache: false,
                data: { id: aId }
            }).done(function (result) {
                $("#pageContent").html(result);
                $(".nav-sidebar .active").removeClass("active");
                $(self).addClass("active");
            })
        });
        toastr.options = {
            "debug": false,
            "positionClass": "toast-bottom-right",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000
        }
    });
</script>
