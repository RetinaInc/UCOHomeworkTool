<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/customval")
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/toastr")

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UCO HW Tool", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @RenderSection("ContextLinks", required: false)
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="wrapper">

        <div class="container-fluid">
            <div class="row">
                <div id="sidebar-wrapper">
                    <div class="sidebar">
                        <ul class="nav nav-sidebar">
                            @RenderSection("Sidebar", required: false)
                        </ul>
                    </div>
                </div>
                <div id="page-content-wrapper">
                    <div class="col-sm-7 col-md-8 col-sm-offset-4 col-md-offset-3 main">
                        @RenderSection("Toggle", required:false)
                        <div id="pageContent">

                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
<script type="text/javascript">
    $(document).ready(function () {
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
        $("a").not("#menu-toggle").click(function (e) {
            $("#wrapper").removeClass("toggled");
        });

        $(".panel-heading").click(function (event) {
            $(event.target).find('a').trigger('click');
        });
    });
</script>
<script>
    $(document).ready(function () {
        toastr.options = {
            "debug": false,
            "positionClass": "toast-bottom-right",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000
        }
    });
</script>
<script type="text/javascript">
    function activateLink(link) {
        $('.nav-sidebar .active').removeClass("active");
        $(link).parent().addClass("active");
    }
</script>