@model UCOHomeworkTool.Models.Assignment 

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        @foreach (var problem in Model.Problems)
        {
            var collapseLink = "#collapse" + problem.ProblemNumber;
            var collapseId = "collapse" + problem.ProblemNumber;
            <div class="col-sm-1">
                <input id="selectProblem@(problem.Id)" checked="@problem.IsAssigned" data-pid="@problem.Id" type="checkbox" class="pull-right" />
            </div>
            <div class="col-sm-11">
                <div id="accordion" class="panel-group">
                    <div id="panel@(problem.Id)" class="panel 
                         @(problem.IsAssigned ? "panel-success" : "panel-default")">
                        <div class=" panel-heading">
                            <h3 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="@collapseLink">Problem @problem.ProblemNumber</a>
                            </h3>
                        </div>
                        <div id="@collapseId" class="panel-collapse collapse">
                            <ul class="list-group">
                                <li class="list-group-item">
                                        @problem.Description
                                </li> 
                            </ul>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        @*http://placehold.it/600x400&text=Problem Diagram for placeholder*@
                                        <img class="img-responsive img-rounded" src="@Url.Action("DiagramImage","Home",new {id = problem.Id})" />
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="col-md-6">
                                            Given Values:
                                            <ul class="list-group">
                                                @foreach (UCOHomeworkTool.Models.GivenTemplate given in problem.Givens)
                                                {
                                                    <li class="list-group-item">@given.Label : @given.minRange - @given.maxRange</li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            Calculated Values:
                                            <ul class="list-group">
                                                @foreach (var response in problem.Responses)
                                                {
                                                    <li class="list-group-item">@response.Label</li>
                                                }
                                            </ul>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="btn btn-primary pull-right" onclick="assignProblems();">Assign Problems</div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".panel-heading").click(function (event) {
            $(event.target).find('a').trigger('click');
        });
        $("input:checkbox").change(function (event) {
            var pid = $(event.target).data("pid");
            if (this.checked) {
                $("#panel" + pid).removeClass("panel-default").addClass("panel-success");
            }
            else {
                $("#panel" + pid).addClass("panel-default").removeClass("panel-success");
            }
        });
    });
    function assignProblems()
    {
        var probids = [];
        $("input:checked").each(function () {
            probids.push($(this).data("pid"));
        });
        var aId = @Model.Id;
        var args = JSON.stringify({ "probids": probids, "assignmentId": aId });
        $.ajax({
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                type: "POST",
                url: "/Teacher/AssignProblems",
                data: args,
                success: function(data)
                {
                    toastr.success("The problems were assigned successfully!");  
                }
            })
    }
    //# sourceURL=teacherassignment.js
</script>
